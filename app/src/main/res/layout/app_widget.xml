<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/root"
    android:layout_height="96dp">

    <ImageView
        android:src="@drawable/ic_default"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:paddingStart="96dp">

        <TextView
            android:maxLines="1"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"/>

        <TextView
            android:maxLines="1"
            android:layout_marginStart="6dp"
            android:padding="6dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_singer"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_skip_previous_grey_800_36dp"
                android:id="@+id/btn_prev" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pause_grey_800_36dp"
                android:id="@+id/btn_pause" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_skip_next_grey_800_36dp"
                android:id="@+id/btn_next" />

            <ImageView
                android:scaleType="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_favorite_border_grey_800_24dp"
                android:id="@+id/btn_favorite" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>